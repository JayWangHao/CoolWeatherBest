<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@drawable/app_background1"
        >
        <Button
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:id="@+id/switch_city"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:text="城市"
            android:textColor="#282828"
            android:textAllCaps="false"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/city_name"
            android:layout_centerInParent="true"
            android:textColor="#828282"
            android:textSize="24sp"
            android:text="city name"/>
        <Button
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:id="@+id/refresh_weather"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:text="刷新"
            android:textColor="#282828"
            android:textAllCaps="false"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@drawable/baobao">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/publish_text"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:textColor="#828282"
            android:textSize="18sp"
            android:text="publish text"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/weather_info_layout"
            android:layout_alignParentBottom="true"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:id="@+id/current_date"
                android:layout_gravity=""
                android:layout_marginRight="1dp"
                android:textSize="20sp"
                android:textColor="#282828"
                android:text="current date"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:id="@+id/weather_desp"
                android:layout_marginLeft="1dp"
                android:gravity="center"
                android:textColor="#d81ae3"
                android:textSize="40sp"
                android:text="weather desp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/temp1"
                    android:layout_gravity="center_vertical"
                    android:textColor="#282828"
                    android:textSize="30sp"
                    android:text="temp1"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:text="~"
                    android:textColor="#282828"
                    android:textSize="30sp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/temp2"
                    android:layout_gravity="center_vertical"
                    android:textColor="#282828"
                    android:textSize="30sp"
                    android:text="temp2"/>
            </LinearLayout>
                <ImageView
                    android:layout_width="140dp"
                    android:layout_height="140dp"
                    android:id="@+id/weather_image"
                    android:layout_gravity="left"
                    android:src="@drawable/sun_cloud"/>

        </LinearLayout>
    </RelativeLayout>
</LinearLayout>